<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
    
<struts>
	<package name="customer" extends="json-default" namespace="/customer">  
        <action name="list" class="com.mbusiness.action.CustomerListAction" method="list">
            <result type="json"></result>
        </action> 
        <action name="add" class="com.mbusiness.action.CustomerAddAction" method="add">
            <result type="json"></result>
            <result name="input" type="json"></result>
        </action>
        <action name="delete" class="com.mbusiness.action.CustomerDeleteAction" method="delete">
            <result type="json"></result>
            <result name="input" type="json"></result>
        </action>
        <action name="onlineadd" class="com.mbusiness.action.CustomeronlineAddAction" method="add">
            <result type="json"></result>
            <result name="input" type="json"></result>
        </action>
        <action name="addphoto" class="com.mbusiness.action.CustomerAddphotoAction" method="add">
            <result type="json"></result>
            <result name="input" type="json"></result>
        </action>
        <action name="deletephoto" class="com.mbusiness.action.CustomerphotoDeleteAction" method="delete">
            <result type="json"></result>
            <result name="input" type="json"></result>
        </action>
        <action name="listphoto" class="com.mbusiness.action.CustomerphotoListAction" method="list">
            <result type="json"></result>
        </action> 
        <action name="modify" class="com.mbusiness.action.CustomerModifyAction" method="modify">
            <result type="json"></result>
            <result name="input" type="json"></result>
        </action>
    </package> 
</struts>